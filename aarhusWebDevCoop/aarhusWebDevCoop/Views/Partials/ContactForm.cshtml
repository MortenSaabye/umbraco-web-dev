@model aarhusWebDevCoop.ViewModels.ContactForm
@{
    Layout = null;
}
@if (TempData["success"] == null)
{
    using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface",
            new { @class = "form-horizontal" }))
    {
        <div class="form-group col-md-8">
            @Html.LabelFor(x => x.Name, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group col-md-8">
            @Html.LabelFor(x => x.Email, new { @class = "control-label " })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group col-md-8">
            @Html.LabelFor(x => x.Subject, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(x => x.Subject)
        </div>
        <div class="form-group col-md-8">
            @Html.LabelFor(x => x.Message, new { @class = "control-label" })
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(x => x.Message)
        </div>
        <div class="form-group col-md-8">
            <div>
                <button class="btn btn-primary" name="submit" type="submit">
                    Submit
                </button>
            </div>
        </div>
    }
}
else
{
    <p>Thank you for contacting us. We’ll be in touch soon!</p>
}

